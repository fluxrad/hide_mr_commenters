{
  "manifest_version": 2,

  "name": "MR Hide Commenter",
  "description": "This extension hides specific commenters on Marginal Revolution",
  "icons" : { "128" : "marginalrevolution.png" },
  "version": "1.0",
  "background_page" : "background.html",
  "permissions": [
    "tabs",
    "storage",
    "http://*/*", 
    "https://*/*"
  ],
  "page_action": {
    "default_title" : "MR Hide Commenter",
    "default_icon" : "marginalrevolution.png",
    "page_action" : "popup.html"
  },
  "content_scripts": [ { 
    "js": [ "jquery.min.js", "background.js"],
    "matches": ["http://*/*", "https://*/*"]
  }]
}
