{
  "manifest_version": 2,

  "name": "Hide MR Commenters",
  "description": "This extension hides specific commenters on Marginal Revolution",
  "icons" : { "128" : "marginalrevolution.png" },
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "http://marginalrevolution.com/*", 
    "https://marginalrevolution.com/*"
  ],
  "page_action": {
    "default_name": "MR Hide Commenter",
    "default_icon": "marginalrevolution19.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [ { 
    "js": [ "jquery.min.js", "background.js"],
    "matches": ["http://marginalrevolution.com/*", "https://marginalrevolution.com/*"]
  }]
}
